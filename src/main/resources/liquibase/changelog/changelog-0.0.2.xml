<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="0.0.2-1" author="hitham-ramzy">
        <delete tableName="validation_result"/>
    </changeSet>


    <changeSet id="0.0.2-2" author="hitham-ramzy">
        <createTable tableName="upload_action">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="time" type="timestamp" defaultValueDate="now()">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="0.0.2-3" author="hitham-ramzy">
        <createTable tableName="valid_number">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="mobile_number" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="upload_action_id" type="bigint">
                <constraints nullable="true"/>
            </column>
        </createTable>


        <createTable tableName="fixed_number">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="mobile_number" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="what_was_modified" type="varchar(255)"/>
            <column name="upload_action_id" type="bigint">
                <constraints nullable="true"/>
            </column>
        </createTable>


        <createTable tableName="invalid_number">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="mobile_number" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="why_failed" type="varchar(255)"/>
            <column name="upload_action_id" type="bigint">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>


</databaseChangeLog>