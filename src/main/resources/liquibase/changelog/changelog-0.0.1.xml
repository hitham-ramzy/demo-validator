<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="0.0.1-1" author="hitham-ramzy">
        <createTable tableName="validation_result">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="mobile_number" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="ENUM('VALID','FIXED','INVALID')">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(255)"/>
            <column name="fixed_mobile_number" type="varchar(12)"/>
        </createTable>
    </changeSet>


</databaseChangeLog>